// Prisma schema for Vercel builds (JS client only)
// Python client is generated post-install by prisma package

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_DATABASE_URL")
}

model User {
  id                  String   @id @default(uuid())
  email               String   @unique
  createdAt           DateTime @default(now())
  updatedAt           DateTime @updatedAt

  // Billing fields
  stripeCustomerId    String?  @unique
  subscriptionId      String?
  subscriptionStatus  String   @default("free") // "free", "pro", "cancelled"
  monthlyMinutesUsed  Float    @default(0)
  monthlySessionCount Int      @default(0)
  usageResetAt        DateTime @default(now())

  // Relations
  sessions  Session[]
  settings  UserSettings?
  entities  Entity[]
  tags      Tag[]
  usageLogs UsageLog[]
}

model UserSettings {
  id                    String  @id @default(cuid())
  userId                String  @unique
  user                  User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  openaiApiKey          String? // Encrypted
  transcriptionProvider String  @default("whisper")
  transcriptionModel    String  @default("whisper-1")
  summaryModel          String  @default("gpt-4o-mini")
  chatModel             String  @default("gpt-4o-mini")
}

model Session {
  id               String          @id @default(uuid())
  userId           String
  user             User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  title            String?         // Optional custom title for the session
  audioFileName    String
  audioFileUrl     String
  context          String
  language         String          @default("he") // Hebrew default (user preference)
  detectedLanguage String?         // Auto-detected language from audio
  status           String          @default("pending") // pending, processing, completed, failed
  createdAt        DateTime        @default(now())
  updatedAt        DateTime        @updatedAt
  transcript       Transcript?
  summary          Summary?
  chatMessages     ChatMessage[]
  entityMentions   EntityMention[]
  tags             SessionTag[]
}

model Transcript {
  id        String              @id @default(cuid())
  sessionId String              @unique
  session   Session             @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  segments  TranscriptSegment[]
  language  String
  duration  Float?
}

model TranscriptSegment {
  id           String     @id @default(cuid())
  transcriptId String
  transcript   Transcript @relation(fields: [transcriptId], references: [id], onDelete: Cascade)
  speakerId    String     // "speaker_1", "speaker_2", etc.
  speakerName  String?    // User-assigned name
  text         String     @db.Text
  startTime    Float
  endTime      Float
  order        Int

  @@index([transcriptId, order])
}

model Summary {
  id          String       @id @default(cuid())
  sessionId   String       @unique
  session     Session      @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  overview    String       @db.Text
  keyPoints   String[]
  actionItems ActionItem[]
}

model ActionItem {
  id          String   @id @default(cuid())
  summaryId   String
  summary     Summary  @relation(fields: [summaryId], references: [id], onDelete: Cascade)
  description String   @db.Text
  assignee    String?
  deadline    String?
  completed   Boolean  @default(false)

  @@index([summaryId])
}

model ChatMessage {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  role      String   // "user" or "assistant"
  content   String   @db.Text
  createdAt DateTime @default(now())

  @@index([sessionId, createdAt])
}

// Entity extraction models
model Entity {
  id              String   @id @default(cuid())
  userId          String
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type            String   // "person", "organization", "project", "date", "time", "price", "location", "deliverable", "decision"
  value           String   // The extracted value
  normalizedValue String?  // For deduplication (lowercase, trimmed)
  firstSeenAt     DateTime @default(now())
  lastSeenAt      DateTime @updatedAt
  mentionCount    Int      @default(1)

  mentions        EntityMention[]

  @@unique([userId, type, normalizedValue])
  @@index([userId, type])
  @@index([userId, value])
}

model EntityMention {
  id        String   @id @default(cuid())
  entityId  String
  entity    Entity   @relation(fields: [entityId], references: [id], onDelete: Cascade)
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  context   String?  @db.Text // Surrounding text for context
  createdAt DateTime @default(now())

  @@index([entityId])
  @@index([sessionId])
}

// Tagging models
model Tag {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  color     String?  @default("#6B7280")
  source    String   @default("manual") // "manual" | "auto:person" | "auto:organization" | "auto:project"
  isVisible Boolean  @default(true)     // false for auto-generated tags
  createdAt DateTime @default(now())

  sessions  SessionTag[]

  @@unique([userId, name])
  @@index([userId])
  @@index([userId, source])
}

model SessionTag {
  id        String   @id @default(cuid())
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  tagId     String
  tag       Tag      @relation(fields: [tagId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([sessionId, tagId])
  @@index([sessionId])
  @@index([tagId])
}

// Usage tracking for billing
model UsageLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  sessionId String
  minutes   Float
  createdAt DateTime @default(now())

  @@index([userId, createdAt])
}
